<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gfx="clr-namespace:RogueMAUI.Graphics"
             xmlns:controls="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:viewModels="clr-namespace:RogueMAUI.ViewModels"
             x:Class="RogueMAUI.Views.GamePage"
             x:DataType="viewModels:GameViewModel"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="3*, 1*">
        <controls:SKCanvasView x:Name="GameCanvas"
                           Grid.Row="0"
                           PaintSurface="OnCanvasPaint"
                           IgnorePixelScaling="True">
        </controls:SKCanvasView>

        <VerticalStackLayout Grid.Row="1"
                             BackgroundColor="#222222"
                             Padding="10">
            <Label Text="PLAYER STATS" FontSize="20" TextColor="Gold" HorizontalOptions="Center"/>
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Label Text="{Binding Health, StringFormat='HP: {0}'}" TextColor="Red" />
                <Label Text="{Binding CoinCount, StringFormat='Gold: {0}'}" TextColor="Yellow" />
                <Button Text="â¸"
                        Command="{Binding PauseCommand}"
                        BackgroundColor="#444444"
                        TextColor="White"
                        WidthRequest="50"
                        HeightRequest="40" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>